@model List<BookStore.Models.Carousel>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/Carousel/CarouselIndex.css?v=002" />
</head>
<body>
    <div class="main">
        <a href="/Carousel/CarouselAdd/" class="btn btn-dark newBookButton">New Image</a>

        <div style="height: 500px;overflow: scroll;">
            <table class="table table-fixed table-bordered table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Text</th>
                        <th scope="col">Image</th>
                        <th scope="col">Update</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @{int index = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th width="30px" scope="row">@index</th>
                            <td width="400px">@item.Text</td>
                            <td width="200px"><img src="/images/@item.ImageUrl" width="140" height="50" /></td>
                            <td width="50"><a href="/Carousel/CarouselGet/@item.CarouselId" class="btn btn-outline-primary">Update</a></td>
                            <td width="50"><a href="/Carousel/CarouselDelete/@item.CarouselId" class="btn btn-outline-danger">Delete</a></td>
                        </tr>

                        index++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
