@model BookStore.Models.Genre

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <link rel="stylesheet" type="text/css" href="~/css/Genre/GenreGet.css?version=51">
    <form asp-action="GenreUpdate" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="GenreId" class="form-control" hidden="hidden" />
            <label asp-for="GenreName" class="control-label"></label>
            <input asp-for="GenreName" class="form-control" />
            <span asp-validation-for="GenreName" class="text-danger"></span>
        </div>
        <div class="form-group">

            <input type="submit" value="Update" class="btn btn-dark button" />
        </div>
    </form>

</body>
</html>