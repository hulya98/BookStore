@model BookStore.Models.Genre

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/css/Genre/GenreAdd.js">
    <script type="text/javascript">
        function validation() {
            Swal.fire(
                'Success!',
                'Genre created!',
                'success'
            )
        }
    </script>
</head>
<body>
    <link rel="stylesheet" type="text/css" href="~/css/Genre/GenreAdd.css?version=51">
    <script src="~/js/site.js"></script>
    <form asp-action="GenreAdd" class="form">
        <div asp-validation-summary="ModelOnly" class="text-dark"></div>
        <div class="form-group">
            <label asp-for="GenreName" class="control-label"></label>
            <input asp-for="GenreName" class="form-control" />
            <span asp-validation-for="GenreName" class="text-dark"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-dark button" onclick="validation()" ; />
        </div>
    </form>


</body>
</html>