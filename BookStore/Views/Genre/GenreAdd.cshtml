@model BookStore.Models.Genre

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <link rel="stylesheet" href="~/css/Genre/GenreAdd.css" />

    <form asp-action="GenreAdd" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="GenreName" class="control-label"></label>
            <input asp-for="GenreName" class="form-control" />
            <span asp-validation-for="GenreName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-dark button" />
        </div>
    </form>

</body>
</html>