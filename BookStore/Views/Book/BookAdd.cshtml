@model BookStore.Models.ViewModels

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <link rel="stylesheet" type="text/css" href="~/css/Book/BookAdd.css?v=002">
    <form asp-action="BookAdd" class="form">
        <div asp-validation-summary="ModelOnly" class="text-dark"></div>
        <div class="form-group">
            <label asp-for="@Model.Books.BookName" class="control-label"></label>
            <input asp-for="@Model.Books.BookName" class="form-control" />
            <span asp-validation-for="@Model.Books.BookName" class="text-dark"></span>

            <label class="col-md-2 control-label">Image</label>
            <div class="col-md-10">
                <input type="file" accept="image/*" asp-for="@Model.Books.ImageUrl" class="form-control"/>
            </div>

            <label class="control-label">WriterName</label>
            <select asp-for="@Model.Books.WriterId" class="form-control" asp-items="@Model.WriterList">
                <option value="">Please select one</option>
            </select>

            <label class="control-label">GenreName</label>
            <select asp-for="@Model.Books.GenreId" class="form-control" asp-items="@Model.GenreList">
                <option value="">Please select one</option>
            </select>

            <label asp-for="@Model.Books.Price" class="control-label"></label>
            <input asp-for="@Model.Books.Price" class="form-control" />
            <span asp-validation-for="@Model.Books.Price" class="text-dark"></span>

            <label asp-for="@Model.Books.SalePercent" class="control-label"></label>
            <input asp-for="@Model.Books.SalePercent" class="form-control" />

            <label asp-for="@Model.Books.DiscountedPrice" class="control-label"></label>
            <input asp-for="@Model.Books.DiscountedPrice" class="form-control" />
            <span asp-validation-for="@Model.Books.DiscountedPrice" class="text-dark"></span>


            <label asp-for="@Model.Books.Stock" class="control-label"></label>
            <input asp-for="@Model.Books.Stock" class="form-control" />
            <span asp-validation-for="@Model.Books.Stock" class="text-dark"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-dark button" />
        </div>
    </form>
</body>
</html>