@model BookStore.Models.Writer

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <link rel="stylesheet" type="text/css" href="~/css/Writer/WriterAdd.css">
        <form asp-action="WriterAdd" class="form">
            <div asp-validation-summary="ModelOnly" class="text-dark"></div>
            <div class="form-group">
                <label asp-for="WriterName" class="control-label"></label>
                <input asp-for="WriterName" class="form-control" />
