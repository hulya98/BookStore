@model BookStore.Dtos.WriterDto

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <link rel="stylesheet" type="text/css" href="~/css/Writer/WriterGet.css?version=51" />
    <form asp-action="WriterUpdate" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="WriterId" class="form-control" hidden="hidden" />
                <label asp-for="WriterName" class="control-label"></label>
                <input asp-for="WriterName" class="form-control" />
                <span asp-validation-for="WriterName" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class=" btn btn-dark button" />
            </div>
    </form>
</body>
</html>