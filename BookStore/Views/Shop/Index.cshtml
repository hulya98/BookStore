    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">

    <title>Pixie - Ecommerce HTML5 Template</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/css/fontawesome.css">
    <link rel="stylesheet" href="~/css/tooplate-main.css">
    <link rel="stylesheet" href="~/css/owl.css">
    <!--
    Tooplate 2114 Pixie
    https://www.tooplate.com/view/2114-pixie
    -->
</head>
<body>

    <div class="banner" style="height:220px">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @*<div class="caption">
                            <h2>Ecommerce HTML Template</h2>
                            <div class="line-dec"></div>
                            <p>
                                Pixie HTML Template can be converted into your desired CMS theme. Total <strong>5 pages</strong> included. You can use this Bootstrap v4.1.3 layout for any CMS.
                            </p>
                            <div class="main-button">
                                <a href="#">Order Now!</a>
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Ends Here -->
    <!-- Featured Starts Here -->
    <div class="featured-items">
        <div class="container">
            <div class="row">
                @foreach (var genre in Model.Genres)
                {
                    <div class="col-md-12">
                        <div class="section-heading">
                            <div class="line-dec"></div>
                            <h1>@genre.GenreName</h1>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="owl-carousel owl-theme">
                            @foreach (var book in Model.Books)
                            {
                                @if (genre.GenreId == book.GenreId)
                                {
                                    <a href="single-product.html">
                                        <div class="featured-item">
                                            <img src=/images/@book.ImageUrl style="width:120px;height:150px">
                                            <h4>Proin vel ligula</h4>
                                            <h6>@book.Price man.</h6>
                                        </div>
                                    </a>

                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</body>
</html>