@model BookStore.ViewModels.SearchVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BookDetails</title>
    <link rel="stylesheet" href="~/css/tooplate-main.css">

</head>
<body>
    <div class="banner">
        <div class="container">
            <form asp-controller="Shop" asp-action="Search">
                <div class="row">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control searchPanel" style="margin-top:18px" placeholder="Search Book,Writer or Genre" aria-label="Search Book,Writer or Genre" aria-describedby="basic-addon2" name="item">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" style="margin-top:18px" type="submit">Search</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @foreach (var item in Model.BookDtos)
    {
        <div class="single-product">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-heading">
                            <div class="line-dec"></div>
                            <h1>Search</h1>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="product-slider">
                            <div id="" class="">
                                <ul class="slides">
                                    <li>
                                        <img src=/images/@item.ImageUrl style="width:150px;height:300px" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="right-content">
                            <h4>@item.BookName</h4>
                            @if (item.Price == item.DiscountedPrice)
                            {
                                <h6 style="color:black" class="newPrice">@item.DiscountedPrice man.</h6>
                            }
                            else
                            {
                                <h6 style="text-decoration:line-through;color:black" class="oldPrice">@item.Price man.</h6>
                                <h6 class="newPrice" style="color:black">  @item.DiscountedPrice man.</h6>
                            }
                            <p>@Html.Raw(item.Description)</p>
                            <span>@item.Stock left on stock</span>
                            <div class="down-content">
                                <div class="categories">
                                    <h6>Genre: <span><a asp-action="Search" asp-controller="Shop" asp-route-item="@item.Genre.GenreName">@item.Genre.GenreName</a></span></h6>
                                    <h6>Writer: <span><a asp-action="Search" asp-controller="Shop" asp-route-item="@item.Writer.WriterName">@item.Writer.WriterName</a></span></h6>
                                </div>
                                <div class="share">
                                    <h6>Share: <span><a href="#"><i class="fa fa-facebook"></i></a><a href="#"><i class="fa fa-linkedin"></i></a><a href="#"><i class="fa fa-twitter"></i></a></span></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="featured-items">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-heading">
                            <div class="line-dec"></div>
                            <h1>You May Also Like</h1>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="owl-carousel owl-theme">
                            @foreach (var book in Model.LikeBookForGenre)
                            {
                                <a href=/Shop/BookDetails/@book.BookId>
                                    <div class="featured-item">
                                        <img src=/images/@book.ImageUrl alt="Item 1" style="height:280px">
                                        <h4>@book.BookName</h4>
                                        @if (book.Price == book.DiscountedPrice)
                                        {
                                            <span style="color:black" class="newPrice">@book.DiscountedPrice man.</span>
                                        }
                                        else
                                        {
                                            <span style="text-decoration:line-through;color:black" class="oldPrice">@book.Price man.</span>
                                            <span class="newPrice" style="color:black">  @book.DiscountedPrice man.</span>
                                        }
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>
    <script src="~/assets/js/isotope.js"></script>
    <script src="~/assets/js/flex-slider.js"></script>


    <script language="text/Javascript">

        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>


</body>
</html>
